extends index

block metas
   meta(name='description', content='GrassTweets.com login page.')

block afterNav
   div.page-header
      h2 Login to GrassTweets.com
   div.row-fluid
      div.span12
         p.
            GrassTweets.com uses Twitter Login so you don't have to worry about having
             yet another username and password. Click the button below to login. If you've
             never logged in to our site before, don't worry, an account will automatically
             be created for you!
         a(href='/auth/twitter')
            img(src='/img/twittersignin.png')
   div.row-fluid
      |&nbsp;
   div.row-fluid
      div.span12
         p PS - Check out&nbsp;
            a(target='_new', href='https://dev.twitter.com/docs/auth/sign-twitter') Sign in with Twitter

block modals
   //- this is where you can add hidden divs and other elements that you'll want to display
      dynamically on the page. 

block pageScripts
   //- This is where any page specific scripts go   
      Keep in mind that these are included in every page already:
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
      script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js')